@model MedProSC.Feature.ManualForms.Models.LoadForm


@if (Model != null)
{
    <div class="loadform">
        <p class="fill">@Model.LoadFormTitle</p>

        <div class="row row-loadform-fields">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="formissue">@Model.IssueLabel<b style="color:red">*</b></label>
                    <select id="formissue" name="formissue" class="form-control form-select form-select-md mb-3 btn-sm" required>
                        @if (Model != null && Model.IssueCompanyList != null)
                        {
                            @foreach (SelectListItem company in Model.IssueCompanyList)
                            {
                                <option value="@company.Value">@company.Text</option>
                            }
                        }

                    </select>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <label for="formstate">@Model.StateLabel<b style="color:red">*</b></label>
                    <select id="formstate" name="formstate" class="form-control form-select form-select-md mb-3 btn-sm" required>

                        @if (Model != null && Model.StateList != null)
                        {
                            @foreach (SelectListItem state in @Model.StateList)
                            {
                                <option value="@state.Value">@state.Text</option>
                            }
                        }

                    </select>
                </div>
            </div>


            <div class="col-md-2">
                <div class="form-group">
                    <label for="formdate" class="">@Model.DateLabel<b style="color:red">*</b></label>
                    <input type="date" class="form-control btn-sm formdate" required>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <label for="formstype" class="">@Model.FormsTypeLabel<b style="color:red">*</b></label>
                    <select name="formstype" class="form-control form-select form-select-md mb-3 btn-sm formstype" required>
                        <option value="id7323258">HPLP</option>
                        <option value="id4515534">MSHP</option>
                    </select>
                </div>
            </div>


        </div>
        <div class="row">
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary btn-sm btn-load-form">@Model.LoadFormButtonText</button>
            </div>
        </div>
    </div>
}