@model MedProSC.Feature.ManualForms.Models.MyBundle


@if (Model != null)
{
    <div class="mybundle">
        <p>@Model.MyBundleTitle</p>
        <table class="table table-bordered bundle-table">
            <thead class="bundlehead">
                <tr>
                    <th style="width: 118px;">@Model.FormNumber</th>
                    <th>@Model.FormName</th>
                    <th style="width: 30px;"></th>
                </tr>
            </thead>
            <tbody class="bundlebody">
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </tbody>
        </table>
        <div class="center">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="formdate" class="below-table">@Model.PolocyNumber<b style="color:red">*</b></label>
                    <input type="text" class="form-control btn-sm formdate" style= "padding: 1%; width: 72%; line-height: 1;" required>
                </div>
            </div>
            <div class="col-md-6" style="width: 35% !important;">
                <div class="form-group">
                    <label for="formdate" class="below-table">@Model.FirstNamedInsured<b style="color:red">*</b></label>
                    <input type="text" class="form-control btn-sm formdate" style= "padding: 1%; line-height: 1;" required>
                </div>
            </div>

            <div class="col-md-4" style="margin-left: 7%;">
                <div class="form-group">
                    <label for="formstype" class="below-table">@Model.TransactionType<b style="color:red">*</b></label>
                    <select name="formstype" class="form-control form-select form-select-md mb-3 btn-sm formstype" style= "padding: 1%; width: 85%;" required>
                        <option value="1">New Bussiness</option>
                        <option value="2" id="div1">Endorsement</option>
                        <option value="3">Renewal</option>
                    </select>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 description" style="display:none;">
                <div class="form-group">
                    <label for="formdate" class="">@Model.Description<b style="color:red">*</b></label>
                    <textarea id='alltext' class="col-md-12"></textarea>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        
        <div class="uploadcenter">
            <div class="upload-icon">
                <i class="bi bi-arrow-bar-up"></i>
            </div>
            <div style="margin-top:10px;" class="col-md-10">
                <input type="file" id="file" style="display:none" name="image" accept="image/gif,image/jpeg,image/jpg,image/png" multiple="" data-original-title="upload form">
                <label for="file" style="text-align: center; color: rgb(0, 178, 245); margin-left: 20%;">
                    Upload Schedule Data
                </label>
            </div>
        </div>
        <div class="create">
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary btn-sm create-button">@Model.CreateBundle</button>
            </div>
        </div>
    </div>
}